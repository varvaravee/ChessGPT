#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <libgen.h>
#include <string.h>
#include <math.h>

//Display main menu and prompt user for choice of side
int main()
{
    printf("\n Welcome to ChesGPT! The world's smartest and funniest chess program!\n\n ");
    
    //prototypes
    void mainMenu();



    //calls mainMenu
    mainMenu();

    //Functions
    void mainMenu()
    {
        int choice;

        //while loop that presents menu until exit of application
        do {
            printf("Please make a selection from the main menu below.\n \n");
            printf("1. Start a game!\n");
            printf("2. Tell a joke.\n");
            printf("3. Exit.");


            //validate input and start game if input is 1
            if (choice == 1)
            {
                char playerSide;
                printf("\nGreat choice! Please select your preference for the color of your pieces.\n");
                printf("Input 'B' for black pieces and 'W' for white pieces. White pieces move first.\n");
                scanf(" %c", &playerSide);
            
                //case statements

            }

            else if (choice == 2)
            {
                printf("Knock knock!\n");
                printf("Who's there?\n");
                printf("Your mom!\n");
                printf("Now play some chess!\n");
            }

            else 
            {
                printf("\nYou have selected a wrong number. You will be returned to the main menu.\n");
            }
        } while (choice != 3);
}
}